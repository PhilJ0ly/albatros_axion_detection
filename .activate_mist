#!/bin/bash

# Philippe Joly 2025-05-21

# This script is designed to load all the necessary modules and activate the albatros conda environment on the MIST machine

# Run as: source .activate_mist

module load MistEnv/2021a anaconda3/2021.05
ARG1="${1:-albatros}"
source activate $ARG1
module load cuda/11.7.1
module load gcc/11.4.0
module load openmpi/4.1.5+ucx-1.14.1
module load fftw/3.3.10

export USE_GPU=1
export LD_LIBRARY_PATH=/home/s/sievers/philj0ly/.conda/envs/albatros/lib/:$LD_LIBRARY_PATH
export CUPY_CACHE_DIR=/project/s/sievers/philj0ly/.cupy/kernel_cache
